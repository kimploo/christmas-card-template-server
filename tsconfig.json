{
  "compilerOptions": {
    "lib": ["es2020", "ESNext"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@/db/*": ["src/db/*"],
      "@/api/*": ["src/api/*"],
      "@/auth/*": ["src/auth/*"],
      "@/models/*": ["src/models/*"],
      "@/common/*": ["src/common/*"],
      "@/types/*": ["src/types/*"],
      "@/util/*": ["src/util/*"]
    },
  },
  // "include": ["./**/*.ts"],
  // "exclude": [
  //   "node_modules/**/*",
  //   ".serverless/**/*",
  //   ".build/**/*",
  //   ".vscode/**/*",
  //   ".webpack/**/*",
  //   "_warmup/**/*",
  //   ".vscode/**/*",
  //   ".dynamodb/**/*"
  // ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}